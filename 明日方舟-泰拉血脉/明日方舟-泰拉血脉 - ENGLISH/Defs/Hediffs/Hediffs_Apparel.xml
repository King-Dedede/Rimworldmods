<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<HediffDef ParentName="Ark_GeneHediffBase">
	<defName>CloseYouEyes</defName>
	<label>Sleep Time</label>
	<description>Close your eyes and have a sweet dream, my little angel~</description>
	<stages>
		<li>
			<statOffsets>
				<BedRestEffectiveness>0.35</BedRestEffectiveness>
			</statOffsets>
			<capMods>
				<li>
					<capacity>Sight</capacity>
					<setMax>0.2</setMax>
				</li>
			</capMods>
		</li>
	</stages>
	<comps>
		<li Class="HediffCompProperties_RemoveIfApparelDropped" />
	</comps>
</HediffDef>
	
<HediffDef ParentName="Ark_GeneHediffBase">
	<defName>OpenYouEyes</defName>
	<label>Moment of Reckoning</label>
	<description>With full force! Let those sinners who disturb people's dreams receive divine grace! Hell is their only destination!</description>
	<stages>
		<li>
			<statOffsets>
				<RestFallRateFactor>0.7</RestFallRateFactor>
			</statOffsets>
			<statFactors>
				<AimingDelayFactor>0.5</AimingDelayFactor>
				<RangedWeapon_Cooldown>0.5</RangedWeapon_Cooldown>
			</statFactors>
			<capMods>
				<li>
					<capacity>Sight</capacity>
					<offset>1.0</offset>
				</li>
			</capMods>
		</li>
	</stages>
	<comps>
		<li Class="HediffCompProperties_RemoveIfApparelDropped" />
	</comps>
</HediffDef>
</Defs>