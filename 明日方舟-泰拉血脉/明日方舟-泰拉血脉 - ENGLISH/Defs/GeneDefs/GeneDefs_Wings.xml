<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <GeneDef Name="Ark_WingBase" Abstract="True">
    <displayCategory>Ark_Bodies</displayCategory>
    <exclusionTags>
    <li>Wing</li>
    <li>Wings</li>
	<li>Ark_Wings</li>
    </exclusionTags>
    <graphicData>
    <drawLoc>Tailbone</drawLoc>
    </graphicData>
    <randomChosen>true</randomChosen>
  </GeneDef>

  <GeneDef ParentName="Ark_WingBase">
    <defName>Ark_LightWings</defName>
    <label>Light Wings</label>
    <description>The carrier of this gene will generate disembodied light wings on thier back. The light wings do not have the function of flying but can effectively improve the carrier's maneuverability. \n\nFeather wings are out of date, try inserting luminous geometry behind your back to make a cyber angel!</description>
    <iconPath>UI/Icons/Genes/Ark_LightWings</iconPath>
	  <prerequisite>Ark_Sectator</prerequisite>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
	  <statOffsets>
		  <MoveSpeed>0.1</MoveSpeed>
		  <MeleeDodgeChance>5</MeleeDodgeChance>
	  </statOffsets>
    <graphicData>
    <graphicPaths>
        <li>Things/Pawn/Humanlike/BodyAttachments/Ark_LightWings/Ark_Wings1</li>
        <li>Things/Pawn/Humanlike/BodyAttachments/Ark_LightWings/Ark_Wings2</li>
        <li>Things/Pawn/Humanlike/BodyAttachments/Ark_LightWings/Ark_Wings3</li>
        <li>Things/Pawn/Humanlike/BodyAttachments/Ark_LightWings/Ark_Wings4</li>
		<li>Things/Pawn/Humanlike/BodyAttachments/Ark_LightWings/Ark_Wings5</li>
    </graphicPaths>
    <drawScale>1.8</drawScale>
    <drawOffsetNorth>(0, 0.19, 0)</drawOffsetNorth>
    <drawOffsetSouth>(0, 0, 0)</drawOffsetSouth>
    <drawOffsetEast>(0, 0, 0)</drawOffsetEast>
    </graphicData>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>sacred</symbol></li>
        <li><symbol>bright</symbol></li>
        <li><symbol>dazzling</symbol></li>
        <li><symbol>decorative</symbol></li>
      </prefixSymbols>
    </symbolPack>
    <modExtensions>
         <li Class="VanillaGenesExpanded.GeneExtension">
           <backgroundPathEndogenes>UI/Icons/Genes/Ark_Endogene</backgroundPathEndogenes>
           <backgroundPathXenogenes>UI/Icons/Genes/Ark_Xenogene</backgroundPathXenogenes>
         </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="Ark_WingBase">
    <defName>Ark_BigLightWings</defName>
    <label>Saintly Wings</label>
    <description>The wings of glory belong to those who bear sacrifice and face the future.</description>
    <iconPath>UI/Icons/Genes/Ark_BigLightWings</iconPath>
	  <prerequisite>Ark_Sectator</prerequisite>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
	  <statOffsets>
		  <MoveSpeed>0.1</MoveSpeed>
		  <MeleeDodgeChance>5</MeleeDodgeChance>
	  </statOffsets>
    <graphicData>
      <graphicPath>Things/Pawn/Humanlike/BodyAttachments/Ark_LightWings/Ark_BigWings</graphicPath>
    <drawScale>1.8</drawScale>
    <drawOffsetNorth>(0, 0.19, 0)</drawOffsetNorth>
    <drawOffsetSouth>(0, 0, 0)</drawOffsetSouth>
    <drawOffsetEast>(0, 0, 0)</drawOffsetEast>
    </graphicData>
    <modExtensions>
         <li Class="VanillaGenesExpanded.GeneExtension">
           <backgroundPathEndogenes>UI/Icons/Genes/Ark_Endogene</backgroundPathEndogenes>
           <backgroundPathXenogenes>UI/Icons/Genes/Ark_Xenogene</backgroundPathXenogenes>
         </li>
    </modExtensions>
  </GeneDef>
</Defs>