<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef Name="Ark_GeneTailBase" Abstract="True">
		<biostatCpx>1</biostatCpx>
		<biostatMet>0</biostatMet>
		<randomChosen>true</randomChosen>
		<displayCategory>Ark_Tails</displayCategory>
		<displayOrderInCategory>50</displayOrderInCategory>
		<statOffsets>
			<MoveSpeed>0.1</MoveSpeed>
		</statOffsets>
		<graphicData>
			<drawLoc>Tailbone</drawLoc>
			<drawScale>1.5</drawScale>
			<drawOffsetNorth>(0, 0.2, 0)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0)</drawOffsetSouth>
			<drawOffsetEast>(0, 0.02, 0)</drawOffsetEast>
		</graphicData>
		<exclusionTags>
			<li>Ark_Tail</li>
			<li>Tail</li>
		</exclusionTags>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<backgroundPathEndogenes>UI/Icons/Genes/Ark_Endogene</backgroundPathEndogenes>
				<backgroundPathXenogenes>UI/Icons/Genes/Ark_Xenogene</backgroundPathXenogenes>
			</li>
			<li Class="BetterGeneGraphicsFramework.BetterTailRendering" MayRequire="telardo.BetterGeneGraphicsFramework">
				<disableBodyTypeScaleForAdult>false</disableBodyTypeScaleForAdult>
				<bodyTypeOffsetNorth>
					<male>(0,0,0.02)</male>
					<female>(0,0,-0.02)</female>
					<hulk>(0,0,-0.09)</hulk>
					<fat>(0,0,0.07)</fat>
					<thin>(0,0,-0.03)</thin>
					<baby>(0,0,0)</baby>
					<child>(0,0,0.09)</child>
					<femaleBB>(0,0,0)</femaleBB>
				</bodyTypeOffsetNorth>
				<bodyTypeOffsetSouth>
					<male>(0,0,0)</male>
					<female>(0,0,0)</female>
					<hulk>(0,0,-0.07)</hulk>
					<fat>(0,0,0.03)</fat>
					<thin>(0,0,-0.05)</thin>
					<baby>(0,0,0)</baby>
					<child>(0,0,0)</child>
					<femaleBB>(0,0,0)</femaleBB>
				</bodyTypeOffsetSouth>
				<bodyTypeOffsetEast>
					<male>(0.03,0,0)</male>
					<female>(0,0,-0.01)</female>
					<hulk>(-0.08,0,-0.03)</hulk>
					<fat>(-0.06,0,0.16)</fat>
					<thin>(0,0,0)</thin>
					<baby>(0.02,0,0.1)</baby>
					<child>(0.07,0,0.13)</child>
					<femaleBB>(0.01,0,0)</femaleBB>
				</bodyTypeOffsetEast>
			</li>
		</modExtensions>
	</GeneDef>
	
	<GeneDef ParentName="Ark_GeneTailBase">
		<defName>Ark_VouivreTail1</defName>
		<label>Cyan Dragon Tail</label>
		<description>The end of this gene carrier's spine is extended to form a long cyan tail covered with scales. This part can assist movement to a certain extent.</description>
		<iconPath>UI/Icons/Genes/Ark_VouivreTail1</iconPath>
		<prerequisite>Ark_Vouivre</prerequisite>
		<graphicData>
			<graphicPath>Things/Pawn/Humanlike/BodyAttachments/Ark_VouivreTail/Ark_VouivreTail1</graphicPath>
		</graphicData>
	</GeneDef>

