<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Headbone -->
  <GeneDef ParentName="GeneHeadboneBase">
    <defName>Ark_Halo</defName>
    <label>Halo</label>
    <description>Carriers of this gene will generate a disembodied floating halo above their head, which can enhance the carrier's psychic sensitivity. \n\nAlthough it affects my sleep, I no longer need a flashlight at night.</description>
    <iconPath>UI/Icons/Genes/Ark_Halo</iconPath>
	  <prerequisite>Ark_Sectator</prerequisite>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
	  <selectionWeight>0</selectionWeight>
    <displayCategory>Ark_Heads</displayCategory>
    <ignoreDarkness>true</ignoreDarkness>
    <graphicData>
      <graphicPaths>
		  <li>Things/Pawn/Humanlike/HeadAttachments/Ark_Halo/Ark_Halo</li>
		  <li>Things/Pawn/Humanlike/HeadAttachments/Ark_Halo/Ark_Halo1</li>
		  <li>Things/Pawn/Humanlike/HeadAttachments/Ark_Halo/Ark_Halo2</li>
		  <li>Things/Pawn/Humanlike/HeadAttachments/Ark_Halo/Ark_Halo3</li>
		  <li>Things/Pawn/Humanlike/HeadAttachments/Ark_Halo/Ark_Halo4</li>
		  <li>Things/Pawn/Humanlike/HeadAttachments/Ark_Halo/Ark_Halo5</li>
	  </graphicPaths>
      <layer>PostHeadgear</layer>
    </graphicData>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>Sacred</symbol></li>
        <li><symbol>Bright</symbol></li>
        <li><symbol>Dazzling</symbol></li>
        <li><symbol>Bells and Whistles</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>Halo</symbol></li>
        <li><symbol>Fluorescent Tube</symbol></li>
        <li><symbol>Circle</symbol></li>
      </suffixSymbols>
    </symbolPack>
    <modExtensions>
         <li Class="VanillaGenesExpanded.GeneExtension">
           <backgroundPathEndogenes>UI/Icons/Genes/Ark_Endogene</backgroundPathEndogenes>
           <backgroundPathXenogenes>UI/Icons/Genes/Ark_Xenogene</backgroundPathXenogenes>
           <hediffsToBodyParts>
              <li>
	<hediff>Ark_hediff_Halo</hediff>
	<bodyparts>
                   <li>Head</li>				
	</bodyparts>
              </li>
            </hediffsToBodyParts>
         </li>
    </modExtensions>
  </GeneDef>

	<GeneDef ParentName="GeneHeadboneBase">
		<defName>Ark_TraditionHalo</defName>
		<label>Traditional Halo</label>
		<description>Carriers of this gene will generate a disembodied floating halo above their head, which can enhance the carrier's psychic sensitivity. \n\nThe classic pure white style is suitable for those who have a calm mind.</description>
		<iconPath>UI/Icons/Genes/Ark_Halo</iconPath>
		<prerequisite>Ark_Sectator</prerequisite>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<selectionWeight>0</selectionWeight>
		<displayCategory>Ark_Heads</displayCategory>
		<ignoreDarkness>true</ignoreDarkness>
		<graphicData>
			<graphicPath>Things/Pawn/Humanlike/HeadAttachments/Ark_Halo/Ark_Halo</graphicPath>
			<layer>PostHeadgear</layer>
		</graphicData>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<backgroundPathEndogenes>UI/Icons/Genes/Ark_Endogene</backgroundPathEndogenes>
				<backgroundPathXenogenes>UI/Icons/Genes/Ark_Xenogene</backgroundPathXenogenes>
				<hediffsToBodyParts>
					<li>
						<hediff>Ark_hediff_Halo</hediff>
						<bodyparts>
							<li>Head</li>
						</bodyparts>
					</li>
				</hediffsToBodyParts>
			</li>
		</modExtensions>
	</GeneDef>
	
    <GeneDef>
    <defName>HeadRestrain</defName>
    <label>Head Restraint</label>
    <description>Carriers of the gene appear to have heads that refuse to be covered, causing them to experience intense discomfort when wearing a hat or regular helmet.</description>
    <iconPath>UI/Icons/Genes/HeadRestrain</iconPath>
    <prerequisite>Ark_Sectator</prerequisite>
    <displayCategory>Ark_Misc</displayCategory>
    <biostatCpx>1</biostatCpx>
    <biostatMet>3</biostatMet>
    <modExtensions>
         <li Class="VanillaGenesExpanded.GeneExtension">
           <backgroundPathEndogenes>UI/Icons/Genes/Ark_Endogene</backgroundPathEndogenes>
           <backgroundPathXenogenes>UI/Icons/Genes/Ark_Xenogene</backgroundPathXenogenes>
         </li>
    </modExtensions>
  </GeneDef>

</Defs>